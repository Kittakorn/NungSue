<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewData["Title"]</title>


    <link href="https://fonts.googleapis.com/css2?family=Sarabun:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    @await RenderSectionAsync("Style",false)


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebApplication1</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item me-2">
                           <a class="nav-link text-dark" asp-area="Admin" asp-controller="Book" asp-action=""><i class="fa-solid fa-book text-muted"></i>&ensp;หนังสือ</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="User" asp-action=""><i class="fa-solid fa-user-group text-muted"></i>&ensp;พนักงาน</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="User" asp-action=""><i class="fa-solid fa-users text-muted"></i>&ensp;สมาชิก</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="User" asp-action=""><i class="fa-solid fa-receipt text-muted"></i>&ensp;รายการสั่งซื้อ</a>
                        </li>
                        <li class="nav-item dropdown me-2">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                               <i class="fa-solid fa-list text-muted"></i>&ensp;ข้อมูลอื่น ๆ
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#">สิทธิ์การใช้งาน</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">แท็กหนังสือ</a></li>
                                <li><a class="dropdown-item" href="#">ผู้แต่ง</a></li>
                                <li><a class="dropdown-item" href="#">ประเภทหนังสือ</a></li>
                                <li><a class="dropdown-item" href="#">สำนักพิมพ์</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="User" asp-action=""><i class="fa-solid fa-gear text-muted"></i>&ensp;ตั้งค่าระบบ</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownProfile" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-user-gear text-muted"></i>&ensp;กฤตกร ใคร่ครวญ
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownProfile">
                                <li><a class="dropdown-item" href="#">เปลี่ยนรหัสผ่าน</a></li>
                                <li><a class="dropdown-item" href="#">ออกจากระบบ</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>

    @await RenderSectionAsync("Script",false)
</body>
</html>