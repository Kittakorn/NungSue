@model List<BookItem>

@{
    ViewData["Title"] = "รายการโปรด";
    Layout = "_LayoutUser";
}

<h4 class="mb-2">รายการโปรด</h4>
@if (Model.Any())
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 mb-3" id="@item.BookId">
                <div class="card shadow-sm">
                    <img src="@item.BookImageUrl" class="img-thumbnail" style="width:100%;height:250px">
                    <div class="card-body d-flex justify-content-between p-2 gap-2">
                        <button type="button" class="w-100 btn btn-outline-danger" value="@item.BookId" onclick="UpdateFavorite(this,true)">
                            <i class="fa-solid fa-trash"></i>
                        </button>
                        <button class="w-100 btn btn-outline-primary">
                            <i class="fa-solid fa-cart-shopping text-withe w-100"></i>
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center">
        <h5 class="mb-2">ไม่มีรายการโปรด</h5>
    </div>
}
