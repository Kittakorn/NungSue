@model SignInViewModel
@{
    ViewData["Title"] = "ลงชื่อเข้าใช้งาน";
}
<div class="mx-auto p-4" style="width:500px">
    <div class="card shadow-lg">
        <h3 class="card-header p-3 text-center">
            ลงชื่อเข้าใช้งาน
        </h3>
        <div class="card-body">
            <form autocomplete="off" method="post" asp-route-returnUrl="@ViewBag.ReturnUrl">
                <fieldset class="mb-2">
                    <label asp-for="Email" class="form-label fw-bold">อีเมล <span class="text-danger">*</span></label>
                    <div class="input-group mb-1">
                        <span class="input-group-text text-muted">
                            <i class="fa-solid fa-envelope fa-lg"></i>
                        </span>
                        <input asp-for="Email" type="email" class="form-control form-control-lg" data-val-email="อีเมลไม่ถูกต้อง">
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </fieldset>
                <fieldset class="mb-2">
                    <label asp-for="Password" class="form-label fw-bold">รหัสผ่าน <span class="text-danger">*</span></label>
                    <div class="input-group mb-1">
                        <span class="input-group-text text-muted">
                            <i class="fa-solid fa-lock fa-lg"></i>
                        </span>
                        <input asp-for="Password" type="password" class="form-control form-control-lg" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </fieldset>
                <div class="d-flex justify-content-between mb-2">
                    <div class="form-check ps-0">
                        <input asp-for="RememberMe" class="form-check-input" type="checkbox">
                        <label class="form-check-label ms-2" asp-for="RememberMe">
                            จดจำรหัสผ่าน
                        </label>
                    </div>
                    <a class="text-muted text-decoration-none">ลืมรหัสผ่าาน</a>
                </div>
                <button class="btn btn-primary w-100 mb-3">เข้าสู่ระบบ</button>
            </form>
            <partial name="_SocialLogin" />
            <div class="text-center">
                <span class="text-muted">เพิ่มเคยเข้ามาใช้งานใช่หรือไม่</span> <a asp-action="Register" class="text-decoration-none">สมัครสมัครชิก</a>
            </div>

        </div>
    </div>
</div>


@section Style
    {
    <link rel="stylesheet" href="~/lib/icheck/skins/flat/blue.min.css" />

}

    @section Script
    {
    <script src="~/lib/icheck/icheck.js"></script>
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('input').iCheck({
                checkboxClass: 'icheckbox_flat-blue',
                radioClass: 'iradio_flat-blue'
            });
        });
    </script>
}
